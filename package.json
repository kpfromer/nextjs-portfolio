{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kpfromer/portfolio"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "npm-run-all test:*",
    "test:e2e": "cross-env NODE_ENV=test NEXT_PUBLIC_NODE_ENV=test start-test dev 3000 cy:run",
    "test:unit": "cross-env NODE_ENV=test NEXT_PUBLIC_NODE_ENV=test jest",
    "e2e:watch": "cross-env NODE_ENV=test NEXT_PUBLIC_NODE_ENV=test start-test dev 3000 cy:open",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "format": "prettier --write .",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@mdx-js/react": "^1.6.22",
    "@plaiceholder/base64": "^1.0.0",
    "@tailwindcss/typography": "^0.4.0",
    "autoprefixer": "^10.2.1",
    "clsx": "^1.1.1",
    "framer-motion": "^3.1.3",
    "gray-matter": "^4.0.2",
    "image-size": "^0.9.3",
    "katex": "^0.12.0",
    "luxon": "^1.25.0",
    "next": "10.0.4",
    "next-mdx-remote": "^2.0.1",
    "next-seo": "^4.17.0",
    "polished": "^4.0.5",
    "postcss": "^8.2.3",
    "preact": "^10.5.9",
    "prism-react-renderer": "^1.1.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "^6.14.1",
    "react-icons": "^4.1.0",
    "rehype-katex": "^3.0.1",
    "remark-math": "^3.0.1",
    "remark-unwrap-images": "^2.0.0",
    "swr": "^0.3.11",
    "tailwindcss": "^2.0.2",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.2",
    "vfile": "^4.2.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/dom": "^7.29.1",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/gtag.js": "^0.0.4",
    "@types/luxon": "^1.25.0",
    "@types/node": "^14.14.19",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^6.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "msw": "^0.25.0",
    "next-page-tester": "^0.14.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rehype": "^11.0.0",
    "start-server-and-test": "^1.11.7",
    "ts-jest": "^26.4.4",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "whatwg-fetch": "^3.5.0"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "printWidth": 100,
    "proseWrap": "always",
    "tabWidth": 2
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
